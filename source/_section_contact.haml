#contact.js-anchor.js-contact-section
  %section.bg-coral.white-text
    .wrap
      .hide-mobile
        %i.fa.fa-paper-plane
        %h3= mail_to email_address, email_address, class: 'text-link'

      .hide-web
        %i.fa.fa-paper-plane
        %h3= mail_to email_address, 'Email', class: 'text-link'

      .emdash-dark-coral

      %i.fa.fa-linkedin
      %h3= link_to 'LinkedIn', linkedin_url, target: '_blank', class: 'text-link'

      .emdash-dark-coral

      %i.fa.fa-file-text
      %h3= link_to 'Resume', resume_url, target: '_blank', class: 'text-link'
