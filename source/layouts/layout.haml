!!!5
%html
%head
  %meta(charset='UTF-8')
  %meta(content='IE=edge,chrome=1' http-equiv='X-UA-Compatible')
  %meta(name='viewport' content='width=device-width' content='initial-scale=1')
  %meta(name='description' content="#{t(:meta_description)}")
  %link(rel='icon' href='images/favicon.png')
  %title= 'Ali Aas'
  = stylesheet_link_tag 'index'
  = partial 'vendor_scripts'
  
%body
  %nav
    = link_to('index.html', class: 'logo js-logo') do
      %h1= 'Ali Aas'
    %ul.nav
      %li.nav-item
        = section_link('About')
      %li.nav-item
        = section_link('Projects')    
      %li.nav-item
        = section_link('Contact')
      %li.nav-item.symbol
        &mdash;
      %li.nav-item
        = link_to 'Blog', blog, target: '_blank', class: 'nav-link'

  %main.js-fade-in
    %p.flash.flash-error= t :flash_error
    %p.flash.flash-success= t :flash_success
    = yield
    %footer.bg-steel
      %small= '&copy; 2014 Alexandra Flynn Aas'
  
  = google_javascript_include_tag 'jquery', '1.7.1'
  = javascript_include_tag 'purl', 'init'
