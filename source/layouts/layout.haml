!!!5
%html
  %head
    %meta(charset='UTF-8')
    %meta(content='IE=edge,chrome=1' http-equiv='X-UA-Compatible')
    %meta(name='viewport' content='width=device-width' content='initial-scale=1')
    %meta(name='description' content="#{t(:meta_description)}")
    %link(rel='icon' href='images/favicon.png')
    %link(rel='stylesheet' href=font_awesome_url)
    %title= t :title
    = google_fonts_stylesheet_link_tag('Open+Sans:400,600')
    = stylesheet_link_tag 'index'
    = partial 'vendor_scripts'

  %body
    %nav
      = link_to 'index.html' do
        = partial 'nav_logo'
      %ul.nav-inner
        %li.nav-item
          = section_link('About')
        %li.nav-item
          = section_link('Projects')
        %li.nav-item
          = section_link('Contact')

    %main
      = yield
      %footer.js-footer
        %small
          = t :footer_copyright
          %br
          = t :footer_middleman
          = link_to 'Middleman', repo_url, target: '_blank', class: 'text-link'

    = google_javascript_include_tag 'jquery', '2.1.4'
    = javascript_include_tag 'init'
